TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_from_number

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=notifications

# PostgreSQL Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME_MINUTES=5
DB_QUERY_TIMEOUT_SECONDS=5

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
REQUEST_TIMEOUT_SECONDS=5

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_SMS_QUEUE=sms_notifications
RABBITMQ_EMAIL_QUEUE=email_notifications
RABBITMQ_SLACK_QUEUE=slack_notifications

# RabbitMQ Dead Letter Queue Configuration
RABBITMQ_DLQ_PREFIX=dlq_ 

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
INITIAL_RETRY_DELAY_MS=1000
